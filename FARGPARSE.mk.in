# Include file for external  projects using Unix Make instead of cmake.
# Usage:

# FFLAGS += -I$(GFTL_INCLUDE_DIR) -I$(GFTL_SHARED_INCLUDE_DIR) -I$(FARGPARSE_INCLUDE_DIR)
# LFLAGS += $(FARGPARSE_SHARED_LIBRARIES)

# gFTL-shared
GFTL_SHARED_TOP_DIR := @GFTL_SHARED_TOP_DIR@
include ${GFTL_SHARED_TOP_DIR}/include/GFTL_SHARED.mk

# fArgParse
FARGPARSE_INSTALL_PREFIX := @CMAKE_INSTALL_PREFIX@
FARGPARSE_VERSION := @FARGPARSE_VERSION_MAJOR@.@FARGPARSE_VERSION_MINOR@
FARGPARSE_TOP_DIR := $(FARGPARSE_INSTALL_PREFIX)/FARGPARSE-$(FARGPARSE_VERSION)
FARGPARSE_INCLUDE_DIR := $(FARGPARSE_TOP_DIR)/include
FARGPARSE_LIBRARIES := -L$(FARGPARSE_TOP_DIR)/lib -lfargparse $(GFTL_SHARED_LIBRARIES)


